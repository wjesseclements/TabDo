{
  "name": "tabdo",
  "version": "1.0.0",
  "description": "A minimalist Firefox browser extension that transforms the new-tab page into a to-do list",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && cp manifest.json dist/ && cp node_modules/webextension-polyfill/dist/browser-polyfill.js dist/",
    "test": "jest",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "extension": "npm run build && web-ext run --source-dir=dist --target=firefox-desktop",
    "extension:lint": "web-ext lint --source-dir=dist"
  },
  "keywords": [
    "firefox",
    "extension",
    "todo",
    "productivity",
    "new-tab"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@types/sortablejs": "^1.15.8",
    "@types/webextension-polyfill": "^0.12.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "web-ext": "^7.0.0"
  },
  "dependencies": {
    "sortablejs": "^1.15.0",
    "webextension-polyfill": "^0.12.0"
  }
}
